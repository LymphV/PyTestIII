{
    "settings": 
    {
        "index" :
        {
            "similarity" :
            {
                "default" :
                {
                    "type" : "BM25",
                    "b" : 0.1,
                    "k1" : 1.2
                }
            }
        },
        "analysis": 
        {
            "filter": 
            {
                "english_stop": 
                {
                    "type":       "stop",
                    "stopwords":  "_english_"
                },
                "light_english_stemmer": 
                {
                    "type":       "stemmer",
                    "language":   "light_english" 
                },
                "english_possessive_stemmer": 
                {
                    "type":       "stemmer",
                    "language":   "possessive_english"
                }
            },
            "analyzer": 
            {
                "default": 
                {
                    "char_filter": [ "html_strip" ],
                    "tokenizer":  "ik_max_word",
                    "filter": 
                    [
                        "english_possessive_stemmer",
                        "lowercase",
                        "english_stop",
                        "light_english_stemmer", 
                        "asciifolding" 
                    ]
                },
                "default_search":
                {
                    "char_filter": [ "html_strip" ],
                    "tokenizer":  "ik_smart",
                    "filter": 
                    [
                        "english_possessive_stemmer",
                        "lowercase",
                        "english_stop",
                        "light_english_stemmer", 
                        "asciifolding" 
                    ]
                }
            }
        }
    },
    
    
    "mappings" :
    {
        "dynamic" : "false",
        "properties" :
        {
            "id" : {"type" : "keyword", "store" : true},
            "title" : {"type" : "text"},
            "abstract" : {"type" : "text"},
            "keywords" : {"type" : "text"},
            "scholars" : {"type" : "text"},
            "year" : {"type" : "integer"}
        }
    }
}