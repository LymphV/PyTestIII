{
    "settings": 
    {
        "index" :
        {
            "similarity" :
            {
                "default" :
                {
                    "type" : "BM25",
                    "b" : 0.75,
                    "k1" : 0
                }
            }
        },
        "analysis": 
        {
            "filter": 
            {
                "english_stop": 
                {
                    "type":       "stop",
                    "stopwords":  "_english_"
                },
                "light_english_stemmer": 
                {
                    "type":       "stemmer",
                    "language":   "light_english" 
                },
                "english_possessive_stemmer": 
                {
                    "type":       "stemmer",
                    "language":   "possessive_english"
                }
            },
            "analyzer": 
            {
                "default": 
                {
                    "char_filter": [ "html_strip" ],
                    "tokenizer":  "ik_max_word",
                    "filter": 
                    [
                        "english_possessive_stemmer",
                        "lowercase",
                        "english_stop",
                        "light_english_stemmer", 
                        "asciifolding" 
                    ]
                },
                "default_search":
                {
                    "char_filter": [ "html_strip" ],
                    "tokenizer":  "ik_smart",
                    "filter": 
                    [
                        "english_possessive_stemmer",
                        "lowercase",
                        "english_stop",
                        "light_english_stemmer", 
                        "asciifolding" 
                    ]
                },
                "name_analyzer":
                {
                    "char_filter": [ "html_strip" ],
                    "tokenizer":  "standard",
                    "filter": 
                    [
                        "lowercase",
                        "asciifolding" 
                    ]
                }
            }
        }
    },
    
    
    "mappings" :
    {
        "dynamic" : "false",
        "properties" :
        {
            "a" : {"type" : "text", "analyzer" : "simple"},
            "a1" : {"type" : "text", "analyzer" : "simple", "search_analyzer": "simple"},
            "a2" : {"type" : "text", "analyzer" : "simple", "search_analyzer" : "default_search"},
            "b" : {"type" : "text", "analyzer" : "name_analyzer"},
            "b1" : {"type" : "text", "analyzer" : "name_analyzer", "search_analyzer" : "name_analyzer"},
            "b2" : {"type" : "text", "analyzer" : "name_analyzer", "search_analyzer" : "default_search"},
            "c" : {"type" : "text"}
        }
    }
}